{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Node",
      "program": "${workspaceFolder}/node_modules/.bin/frontful-environment",
      "args": [
        "start",
      ],
      "outFiles": [
        "${workspaceFolder}/build/*",
      ],
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "timeout": 15000,
      "trace": false,
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Start Chrome",
      "url": "http://localhost:8000",
      "webRoot": "${workspaceFolder}",
    },
  ],
  "compounds": [
    {
      "name": "Start Node & Chrome",
      "configurations": [
        "Start Node",
        "Start Chrome",
      ],
    },
  ],
}
