{
  "name": "frontful-todomvc",
  "version": "2.0.0",
  "description": "Isomorphic React, Express and Frontful implementation of TodoMVC application to showcase various Frontful infrastructure elements",
  "private": true,
  "engines": {
    "node": ">=8.11.3"
  },
  "frontful": {
    "config": "./config/config.development.js",
    "environment": {
      "memory": false,
      "server": {
        "port": 8000
      }
    }
  },
  "scripts": {
    "build": "yarn test && frontful-environment build",
    "start": "frontful-environment start",
    "start:debug": "ndb frontful-environment start",
    "start:build": "yarn build && cross-env PORT=8000 node ./build/server",
    "test": "yarn test:eslint",
    "test:eslint": "eslint --max-warnings 0 ."
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.2",
    "frontful-config": "3.x",
    "frontful-dao": "3.x",
    "frontful-environment": "3.x",
    "frontful-model": "3.x",
    "frontful-resolver": "3.x",
    "frontful-router": "3.x",
    "frontful-style": "3.x",
    "frontful-utils": "3.x",
    "mobx": "4.x",
    "mongoose": "^4.11.1",
    "react": "^16.0.0",
    "react-dom": "^16.0.0"
  },
  "devDependencies": {
    "cross-env": "^5.0.1"
  }
}
